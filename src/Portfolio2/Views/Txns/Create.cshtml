@model Portfolio2.Data.Models.Txn

@{
    ViewBag.Title = "New Txn";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Txns" asp-action="Create" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

        <div class="form-group">
            <label class="col-md-2 control-label">Code</label>
            <div class="col-md-10">
                <input name="Code" class="form-control datepicker" />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TxnDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TxnDate" class="form-control datepicker" />
                <span asp-validation-for="TxnDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TxnType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TxnType" asp-items="ViewBag.TypeList" class="form-control"></select>
                <!--<input asp-for="TxnType" class="form-control" />-->
                <span asp-validation-for="TxnType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Units" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Units" class="form-control" />
                <span asp-validation-for="Units" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(function () { // will trigger when the document is ready
       $('.datepicker').datepicker(); //Initialise any date pickers
    });
</script>